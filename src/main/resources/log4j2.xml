<?xml version="1.0" encoding="UTF-8"?><!-- status=debug 可以查看log4j的装配过程 --><configuration status="OFF" monitorInterval="1800">    <properties>        <property name="pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%traceId] [%t] %-5level %c{1}.%M():%L - %msg%xEx%n</property>    </properties>    <appenders>        <Console name="Console" target="SYSTEM_OUT" follow="true">            <PatternLayout pattern="${pattern}" />        </Console>        <RollingRandomAccessFile name="RollingInfoFile"                                 fileName="logs/info.log" filePattern="logs/info_%d{yyyy-MM-dd}.log">            <PatternLayout pattern="${pattern}" />            <Policies>                <TimeBasedTriggeringPolicy interval="1"                                           modulate="true" />                <SizeBasedTriggeringPolicy size="50MB"/>            </Policies>            <Filters>                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="NEUTRAL"/>                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>            </Filters>        </RollingRandomAccessFile>        <RollingRandomAccessFile name="RollingErrorFile"                                 fileName="logs/error.log" filePattern="logs/error_%d{yyyy-MM-dd}.log">            <PatternLayout pattern="${pattern}" />            <Policies>                <TimeBasedTriggeringPolicy interval="1"                                           modulate="true" />                <SizeBasedTriggeringPolicy size="50MB"/>            </Policies>            <Filters>                <ThresholdFilter level="error" onMatch="ACCEPT"                                 onMismatch="DENY" />            </Filters>        </RollingRandomAccessFile>    </appenders>    <loggers>        <!-- 3rdparty Loggers -->        <Logger name="org.springframework" level="INFO" />        <Logger name="com.google" level="info" />        <Logger name="net.rubyeye" level="info" />        <Logger name="org.hibernate" level="info" />        <Logger name="com.alibaba.dubbo" level="info" />        <Logger name="org.mybatis" level="info" />        <Logger name="org.apache" level="info" />        <Logger name="io.undertow" level="info"/>        <Logger name="springfox.documentation" level="info" />        <Root level="INFO">            <appender-ref ref="RollingErrorFile" />            <appender-ref ref="RollingInfoFile" />            <appender-ref ref="Console" />        </Root>    </loggers></configuration>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="970.0" prefWidth="931.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.raiden.redis.ui.controller.RedisClusterDataTableController">
    <VBox prefHeight="970.0" prefWidth="931.0">
        <children>
            <Pane fx:id="searchPane" prefHeight="60.0" prefWidth="800.0">
                <children>
                    <Label layoutX="33.0" layoutY="23.0" text="Key:" />
                    <TextField fx:id="searchKey" accessibleRole="TEXT_FIELD" layoutX="78.0" layoutY="18.0" prefHeight="25.0" prefWidth="322.0" />
                    <Button fx:id="searchButton" layoutX="420.0" layoutY="18.0" mnemonicParsing="false" onAction="#search" prefHeight="25.0" prefWidth="70.0" text="搜索" />
                    <CheckBox fx:id="isFuzzySearch" layoutX="513.0" layoutY="15.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="80.0" text="模糊查找" />
                </children>
            </Pane>
            <TableView fx:id="table" prefHeight="500.0" prefWidth="931.0">
                <columns>
                    <TableColumn fx:id="key" prefWidth="260.0" text="Key" />
                    <TableColumn fx:id="value" prefWidth="670.0" text="Value" />
                </columns>
            </TableView>
            <Pane fx:id="bottomBar" prefHeight="70.0" prefWidth="931.0">
                <children>
                    <Button layoutX="156.0" layoutY="18.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="上一页" />
                    <Button layoutX="556.0" layoutY="18.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="80.0" text="下一页" />
                    <ComboBox fx:id="pageSize" layoutX="356.0" layoutY="18.0" prefHeight="25.0" prefWidth="80.0" value="20">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="20" />
                                <String fx:value="50" />
                                <String fx:value="100" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </children>
            </Pane>
         <AnchorPane prefHeight="340.0" prefWidth="931.0">
            <children>
               <SplitPane dividerPositions="0.35" layoutX="5.0" layoutY="2.0" orientation="VERTICAL" prefHeight="340.0" prefWidth="931.0">
                 <items>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="119.0" prefWidth="931.0">
                        <children>
                           <HBox layoutX="-1.0" layoutY="-2.0" prefHeight="119.0" prefWidth="931.0">
                              <children>
                                 <Pane prefHeight="119.0" prefWidth="100.0">
                                    <children>
                                       <Label layoutX="19.0" layoutY="46.0" text="Key:">
                                          <font>
                                             <Font name="System Bold Italic" size="20.0" />
                                          </font>
                                       </Label>
                                    </children>
                                 </Pane>
                                 <TextArea fx:id="keyTextArea" prefHeight="119.0" prefWidth="825.0" wrapText="true" editable="false"/>
                              </children>
                           </HBox>
                        </children>
                   </AnchorPane>
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="211.0" prefWidth="929.0">
                         <children>
                             <HBox layoutX="-1.0" layoutY="-2.0" prefHeight="211.0" prefWidth="931.0">
                                 <children>
                                     <Pane prefHeight="211.0" prefWidth="100.0">
                                         <children>
                                             <Label layoutX="17.0" layoutY="44.0" text="Value:">
                                                 <font>
                                                     <Font name="System Bold Italic" size="20.0" />
                                                 </font>
                                             </Label>
                                       <Button layoutX="18.0" layoutY="157.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="60.0" text="修改" onAction="#updateValue"/>
                                         </children>
                                     </Pane>
                                 <ScrollPane hbarPolicy="NEVER" prefHeight="600.0" prefWidth="825.0">
                                   <content>
                                       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="825.0">
                                           <TextArea fx:id="valueTextArea" prefHeight="600.0" prefWidth="825.0" wrapText="true"/>
                                       </AnchorPane>
                                   </content>
                                 </ScrollPane>
                                 </children>
                             </HBox>
                         </children>
                     </AnchorPane>
                 </items>
               </SplitPane>
            </children>
         </AnchorPane>
        </children>
    </VBox>
</AnchorPane>
